{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "include": [
    "types/**/*",
    "app/**/*"
  ]
}
